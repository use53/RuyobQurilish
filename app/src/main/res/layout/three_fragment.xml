<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/app_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splashthree"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/view_three"
        android:background="@drawable/splash_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_tree_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Bizning manzilimizni xaritadan \n kurishingiz munkin"
        app:layout_constraintBottom_toTopOf="@+id/gb_report"
        android:layout_marginBottom="10dp"
        app:fontFamily="@font/ollkornariableontwght"
        android:fontFamily="@font/baloobold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"/>
    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/gb_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:buttonColor="@color/purple_1000"
        app:cornerRadius="10dp"
        android:fontFamily="@font/baloobold"
        android:text="KIRISH"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/white"
       />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_splash"
        android:layout_width="40dp"
        android:scaleType="centerCrop"
        android:layout_height="30dp"
        android:elevation="4dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/gb_report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_rawRes="@raw/loadingtwo"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginBottom="20dp" />



</androidx.constraintlayout.widget.ConstraintLayout>